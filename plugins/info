#!/bin/sh

help()
{
    cat<<__EOF__
    usage: u info [ help ]

    Examples:
      u info                   #  print Ubuntu operating system version information
      u info hw|hardware       #  print HW DMI information
__EOF__
}

_system_hw_info()
{
    _sudo_cmd dmidecode -q | more
}

_system_sw_info()
{
    lsb_release -a
}

case $1 in
    help)
        help
        ;;

    hw|hardware)
        _system_hw_info
        ;;
    *)
        _system_sw_info
        ;;
esac

