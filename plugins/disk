#!/bin/sh


_help(){
    cat<<__EOF__
    Usage: u disk [ ls | list | help ]

    Examples:
      u disk ls                                 # list disks
      u disk list                               # list disks
      u disk list /dev/disk0                    # list a specific disk

__EOF__
}

disk_ls(){
    if [ -z "$1" ]; then
        df -h
    else
        df $1
    fi
}

disk_info(){
    [ -z "$1" ] && help && exit 1
     $1
}

case $1 in
    help)
        _help
        ;;
    list|ls)
        shift
        disk_ls $@
        ;;
    *)
        _help
        ;;
esac

